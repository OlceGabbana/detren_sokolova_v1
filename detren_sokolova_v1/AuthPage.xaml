<Page x:Class="detren_sokolova_v1.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:detren_sokolova_v1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <TextBlock Style="{StaticResource TextBlock}">Введите логин</TextBlock>
            <TextBox Style="{StaticResource TextBox}"/>
            <TextBlock Style="{StaticResource TextBlock}">Введите пароль</TextBlock>
            <TextBox Style="{StaticResource TextBox}"/>
            <Button Style="{StaticResource Button}">Войти</Button>
        </StackPanel>
        
    </Grid>
</Page>
